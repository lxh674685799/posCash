<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.soft.laboratory.model.device">
  <class name="DeviceFactory" table="l_d_factory">
  	<!-- 配置主键 -->
  	<id name="id" column="f_id">
  		<!-- 主键的生成策略 -->
  		<generator class="uuid.hex" />
  	</id>
	<property name="name" column="f_name" type="string"/>
	<property name="address" column="f_address" type="string"/>
	<property name="linkName" column="f_linkname" type="string"/>
	<property name="phone" column="f_phone" type="string"/>
	<property name="mobile" column="f_mobile" type="string"/>
  </class>
</hibernate-mapping>

	